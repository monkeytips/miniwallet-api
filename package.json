{
    "name": "webwallet-backend-node",
    "version": "0.1.0",
    "description": "simple webwallet backend in node",
    "main": "./dist/index.js",
    "author": "Extra <extrahash@protonmail.com>",
    "license": "AGPL-3.0",
    "private": true,
    "scripts": {
        "format": "npx prettier . --write --tab-width 4",
        "start": "node ./dist/index.js",
        "build": "node ./node_modules/typescript/bin/tsc",
        "prettier": "node ./node_modules/prettier/bin-prettier.js '**/*.{ts,tsx,json,md}' --tab-width 4 --trailing-comma es5 --ignore-path .gitignore  --arrow-parens always --write",
        "lint": "./node_modules/tslint/bin/tslint src/**/*.ts{,x}",
        "lint-fix": "./node_modules/tslint/bin/tslint src/**/*.ts{,x} --fix"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/ledgerhq__hw-transport": "^4.21.3",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.25",
        "@types/pbkdf2": "^3.1.0",
        "husky": "^3.1.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.1.4"
    },
    "lint-staged": {
        "src/**/*.{ts}": [
            "./node_modules/tslint/bin/tslint -c tslint.json --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn prettier; git add --all; lint-staged"
        }
    },
    "dependencies": {
        "@extrahash/sleep": "^1.0.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-queue": "^0.0.12",
        "express-ws": "^4.0.0",
        "helmet": "^4.4.1",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.21.17",
        "loglevel": "^1.7.1",
        "morgan": "^1.10.0",
        "pbkdf2": "^3.1.1",
        "sqlite3": "^5.0.2",
        "turtlecoin-wallet-backend": "^6.0.5"
    }
}
